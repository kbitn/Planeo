<div class="container-fluid">
  <div class="text-center head mt-5 mb-5">
    <h2 class="mt-5">SIGN IN</h2>
  </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="box-w">
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: "primary-button w-100" %>
      </div>
    <% end %>
    </div>
    <div class="text-center bottom-text mt-2">
       <p>New To Planeo? <strong><%= link_to "Sign Up Now", new_user_registration_path, class: "text-center bottom-text" %></strong></p>
    </div>
  </div>
</div>
