<%= content_for(:title, 'My Groups') %>
<div class="container text-center mt-4 head">
  <h2 class="mt-3">MY GROUPS</h2>
</div>

<div class="container-fluid main-container">

  <div class="row">
    <% current_user.groups.each do |group| %>
    <% arr = [] %>
    <%= link_to group_path(group.id) do %>
    <div class="col-12">
      <div class="custom-group-card d-flex mt-4 m-2">
        <div class="imagen pr-3">
            <img src="<%= group.photo %>">
            <div class="text-center notificationa"><p><%= group.events.count { |event| event.state == "organized"} %></p></div>
          </div>
          <div class="custom-group-card-info m-0">
            <h2 class="m-0 mb-1"><%= group.name %></h2>
            <p class="m-0"><% group.users.sample(4).each do |user| %>
              <% arr << user.name %>
              <% end %>
            <%= "#{arr.join(', ')}..." %></p>
          </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

    <div class="text-center mt-5">
      <%= link_to "New Group", new_group_path, class: "primary-button" %>
    </div>
</div>







